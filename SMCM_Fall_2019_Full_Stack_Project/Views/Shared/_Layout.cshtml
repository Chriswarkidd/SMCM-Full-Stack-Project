<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - What Game Should I play?</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/03cd24b6f5.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-color border-bottom box-shadow mb-3">
            <div class="container">
                <div class="navbar-header">
                    <a class="nav-link navbar-color"><img src="~/Files/game_cart.png" height="30" />WGSIP?</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="fas fa-bars navbar-account-color"></span>
                    </button>
                </div>
                @if (ViewBag.loggedIn)
                {
                    <div class="nav-item float-right">
                        <a class="nav-link navbar-account-color">Welcome, @ViewBag.accountName</a>
                    </div>
                }
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link navbar-text" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navbar-text" asp-area="" asp-controller="Home" asp-action="AllGames">All Games</a>
                        </li>
                        @if (!ViewBag.loggedIn)
                        {
                            <li class="nav-item">
                                <a class="nav-link navbar-text" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                            </li>
                        }
                        @if (ViewBag.loggedIn)
                        {
                            <li class="nav-item">
                                <a class="nav-link navbar-text" asp-area="" asp-controller="Home" asp-action="Account">Account</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link navbar-text" asp-area="" asp-controller="Home" asp-action="Logout">Log Out</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - SMCM_Fall_2019_Full_Stack_Project
        </div>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/16.8.0/umd/react.development.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react-dom/16.8.0/umd/react-dom.development.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
